@model EmployeeManagementSystem.Models.Employee
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>

<div class="container">
    <h3>Add New Employee</h3>
    <form method="post" action="@Url.Action("Create", "Employee")" id="employeeForm">
        @Html.AntiForgeryToken()

        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required maxlength="100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" required maxlength="150" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" maxlength="15" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="JobTitle" class="form-label"></label>
            <input asp-for="JobTitle" class="form-control" required maxlength="50" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date" required />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Salary" class="form-label"></label>
            <input asp-for="Salary" class="form-control" required />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Department" class="form-label"></label>
            <input asp-for="Department" class="form-control" maxlength="50" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="HireDate" class="form-label"></label>
            <input asp-for="HireDate" class="form-control" type="date" required />
            <span asp-validation-for="HireDate" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="ManagerId" class="form-label"></label>
            <input asp-for="ManagerId" class="form-control" />
            <span asp-validation-for="ManagerId" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-success">Save Employee</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $("#employeeForm").submit(function(event) {
            if ($("#employeeForm").valid()) {
                return true;
            }
            event.preventDefault();
            return false;
        });
    </script>
}
